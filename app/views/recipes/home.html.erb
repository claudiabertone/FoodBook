  <div class="row-fluid">
    <div class="span6"><h3>Ricettario</h3>
      <%= link_to cookbook_path do %> <%= t(:"Vai al tuo ricettario").html_safe %>
      <% end %> </div>
    <div class="span6"><h3>Ricerca ricetta</h3>

      <div class="row-fluid">
        <% #ricerca ricetta per nome %>
        <%= render 'searches/search' %>
      </div>
      <div class="row-fluid">
        <% #ricerca ricetta avanzata tramite piÃ¹ campi %>
        <%= link_to "Ricerca avanzata", new_search_path %>
      </div>

    </div>


    <div class="row-fluid">
      <div class="span12"><h3>Ricette consigliate</h3>


        <div id="recipes">
          <%= render @recipes %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span12"><h3>Ricette del giorno</h3></div>


      </div>

    </div>
  </div>
</div>








