<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'Login' %>

<h1>Login</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit 'Accedi', class: 'btn btn-large btn-primary' %>
    <% end %>

    <p>Nuovo utente? <%= link_to 'Registrati!', signup_path %></p>
  </div>
</div>
